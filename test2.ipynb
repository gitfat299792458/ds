import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import stumpy

from statsmodels.tsa.seasonal import STL
from scipy.optimize import minimize
from sklearn.utils import resample
import yfinance as yf


# ============================================================
# Utility Functions
# ============================================================

def znorm(x):
    return (x - np.mean(x)) / np.std(x)

def mae(y, yhat):
    return np.mean(np.abs(y - yhat))


# ============================================================
# STEP 1: FIND TOP-K MOTIFS
# ============================================================

def find_top_k_motifs(X, Q, m, k):

    profile = stumpy.mass(Q, X)

    sorted_idx = np.argsort(profile)

    motifs = []

    exclusion = m

    for idx in sorted_idx:

        if abs(idx - (len(X)-m)) < exclusion:
            continue

        overlap = False

        for mi in motifs:

            if abs(idx-mi) < exclusion:
                overlap = True
                break

        if not overlap:

            motifs.append(idx)

        if len(motifs) == k:
            break

    return motifs, profile


# ============================================================
# STEP 2: BOOTSTRAP HYPOTHESIS TEST
# ============================================================

def bootstrap_test(X, Q, m, motif_idx, n_boot=500):

    observed = stumpy.mass(Q, X)[motif_idx]

    null_dist = []

    for _ in range(n_boot):

        rand_start = np.random.randint(0, len(X)-m)

        rand_seq = X[rand_start:rand_start+m]

        d = np.linalg.norm(znorm(Q) - znorm(rand_seq))

        null_dist.append(d)

    p_value = np.mean(np.array(null_dist) <= observed)

    return p_value


# ============================================================
# STEP 3: STL DECOMPOSITION
# ============================================================

def decompose(series, period=3):

    res = STL(series, period=period, robust=True).fit()

    return res.seasonal, res.trend, res.resid


# ============================================================
# STEP 4: BUILD COMPONENT LIBRARY
# ============================================================

def build_component_matrix(X, motif_indices, m):

    components = []

    futures = []

    for idx in motif_indices:

        full = X[idx:idx+2*m]

        past = full[:m]

        future = full[m:]

        S,T,R = decompose(past)

        components.append(np.vstack([S,T,R]).T)

        S2,T2,R2 = decompose(full)

        futures.append(np.vstack([S2[m:],T2[m:],R2[m:]]).T)

    return components, futures


# ============================================================
# STEP 5: OPTIMIZATION
# ============================================================

def optimize_weights(Q, components):

    def loss(w):

        recon = np.zeros(len(Q))

        idx = 0

        for comp in components:

            recon += w[idx]*comp[:,0]
            recon += w[idx+1]*comp[:,1]
            recon += w[idx+2]*comp[:,2]

            idx += 3

        return mae(Q, recon)

    w0 = np.ones(len(components)*3)

    result = minimize(loss, w0, method="Powell")

    return result.x


# ============================================================
# STEP 6: FORECAST
# ============================================================

def forecast(weights, futures, m):

    forecast = np.zeros(m)

    idx = 0

    for future in futures:

        forecast += weights[idx]*future[:,0]
        forecast += weights[idx+1]*future[:,1]
        forecast += weights[idx+2]*future[:,2]

        idx += 3

    return forecast


# ============================================================
# STEP 7: CONFIDENCE INTERVALS
# ============================================================

def bootstrap_forecast_ci(X, Q, motif_indices, m, n_boot=200):

    forecasts = []

    for _ in range(n_boot):

        sample_idx = resample(motif_indices)

        comps, futures = build_component_matrix(X, sample_idx, m)

        w = optimize_weights(Q, comps)

        f = forecast(w, futures, m)

        forecasts.append(f)

    forecasts = np.array(forecasts)

    lower = np.percentile(forecasts, 2.5, axis=0)

    upper = np.percentile(forecasts, 97.5, axis=0)

    mean = np.mean(forecasts, axis=0)

    return mean, lower, upper


# ============================================================
# FULL PIPELINE FUNCTION
# ============================================================

def motif_forecast_pipeline(X, m=90, k=10):

    Q = X[-m:]

    motif_idx, profile = find_top_k_motifs(X, Q, m, k)

    print("Motifs:", motif_idx)

    # hypothesis test

    significant = []

    for idx in motif_idx:

        p = bootstrap_test(X, Q, m, idx)

        print("p-value:", p)

        if p < 0.05:

            significant.append(idx)

    print("Significant motifs:", significant)

    comps, futures = build_component_matrix(X, significant, m)

    weights = optimize_weights(Q, comps)

    point_forecast = forecast(weights, futures, m)

    mean, lower, upper = bootstrap_forecast_ci(X, Q, significant, m)

    return Q, point_forecast, mean, lower, upper



