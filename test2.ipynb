# RUN
# ============================================================

# Example usage

# X = your numpy array

# forecast, mean, lower, upper = motif_forecast_pipeline(X)


# ============================================================
# PLOT
# ============================================================

def plot_results(Q, forecast, lower, upper):

    plt.figure(figsize=(12,6))

    plt.plot(range(len(Q)), Q,
             label="Query",
             linewidth=3)

    future_x = range(len(Q), len(Q)+len(forecast))

    plt.plot(future_x,
             forecast,
             label="Forecast",
             linewidth=3)

    plt.fill_between(future_x,
                     lower,
                     upper,
                     alpha=0.3,
                     label="95% CI")

    plt.legend()

    plt.title("Motif-Based Forecast")

    plt.xlabel("Time")

    plt.ylabel("Value")

    plt.show()

# ============================================================
# RUN
# ============================================================

# Example usage
your_time_series = yf.download('BTC-USD', start='2010-01-01', end='2026-12-31')['Close'].values
X = your_time_series.astype(float)

Q, forecast, mean, lower, upper = motif_forecast_pipeline(X)

plot_results(Q, forecast, lower, upper)
